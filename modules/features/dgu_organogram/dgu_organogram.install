      'deadline_date' => array(
        'description' => 'The Unix timestamp of the Publish date for this organogram.',
        'type' => 'int',
        'not null' => TRUE,
        'default' => 0,
      ),
      'publish_date' => array(
        'description' => 'The Unix timestamp of the Publish date for this organogram.',
        'type' => 'int',
        'not null' => TRUE,
        'default' => 0,
      ),
      'signoff_date' => array(
